---
import Modal from "./Modal.astro";
---

<Modal id='settings' title='settings'>
    <div class='toggle-row'>
        <div class='toggle-label'>
            <span class='toggle-main'>Show furigana</span>
            <span class='toggle-jp'>振り仮名</span>
        </div>
        <label class='toggle-switch'>
            <input type='checkbox' id='showFurigana' checked />
            <span class='toggle-slider'></span>
        </label>
    </div>
    <div id='filterOptions' class='options-box'>
        <h3 class='section-title'>Word Types</h3>
        <div class='button-group'>
            <button type='button' id='recommendedOptionsButton' class='settings-btn'>
                Recommended
            </button>
            <button type='button' id='checkAllButton' class='settings-btn'>
                All
            </button>
            <button type='button' id='uncheckAllButton' class='settings-btn'>
                None
            </button>
        </div>
        <div class='checkbox-grid'>
            <div class='checkbox-item'>
                <input type='checkbox' id='includeNonJapanese' checked />
                <label for='includeNonJapanese'
                    >Non-Japanese <span class='jp'>他</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include名詞' checked />
                <label for='include名詞'>Nouns <span class='jp'>名詞</span></label>
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include動詞' checked />
                <label for='include動詞'>Verbs <span class='jp'>動詞</span></label>
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include形容詞' checked />
                <label for='include形容詞'
                    >Adjectives <span class='jp'>形容詞</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include副詞' checked />
                <label for='include副詞'>Adverbs <span class='jp'>副詞</span></label>
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include連体詞' checked />
                <label for='include連体詞'
                    >Pre-noun <span class='jp'>連体詞</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include接続詞' checked />
                <label for='include接続詞'
                    >Conjunctions <span class='jp'>接続詞</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include感動詞' checked />
                <label for='include感動詞'
                    >Interjections <span class='jp'>感動詞</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='includeフィラー' checked />
                <label for='includeフィラー'
                    >Fillers <span class='jp'>フィラー</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include助詞' checked />
                <label for='include助詞'>Particles <span class='jp'>助詞</span></label>
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include助動詞' checked />
                <label for='include助動詞'
                    >Auxiliary Verbs <span class='jp'>助動詞</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include接頭詞' checked />
                <label for='include接頭詞'
                    >Prefixes <span class='jp'>接頭詞</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='include記号' checked />
                <label for='include記号'>Punctuation <span class='jp'>記号</span></label
                >
            </div>
            <div class='checkbox-item'>
                <input type='checkbox' id='includeUnknown' checked />
                <label for='includeUnknown'
                    >Unknown <span class='jp'>未知語</span></label
                >
            </div>
        </div>
    </div>
</Modal>

<style>
    /* Toggle switch for Furigana */
    .toggle-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius);
        background-color: var(--box-bg-color);
        padding: 0.75rem 1rem;
    }

    .toggle-label {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
    }

    .toggle-main {
        color: var(--high-contrast-text-color);
        font-weight: 500;
        font-size: 0.9375rem;
        font-family: var(--sans-serif);
    }

    .toggle-jp {
        color: var(--subheading-color);
        font-size: 0.8125rem;
        font-family: var(--sans-serif);
    }

    .toggle-switch {
        position: relative;
        flex-shrink: 0;
        width: 44px;
        height: 24px;
    }

    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .toggle-slider {
        position: absolute;
        transition: background 0.2s;
        cursor: pointer;
        inset: 0;
        border-radius: 24px;
        background: var(--border-color);
    }

    .toggle-slider::before {
        position: absolute;
        bottom: 3px;
        left: 3px;
        transition: transform 0.2s;
        box-shadow: 0 1px 3px rgb(0 0 0 / 0.2);
        border-radius: 50%;
        background: white;
        width: 18px;
        height: 18px;
        content: "";
    }

    .toggle-switch input:checked + .toggle-slider {
        background: var(--accent-color);
    }

    .toggle-switch input:checked + .toggle-slider::before {
        transform: translateX(20px);
    }

    /* Word types section */
    .options-box {
        margin-bottom: 0.75rem;
        border-left: 3px solid var(--accent-color);
        background-color: var(--box-bg-color);
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
        font-family: var(--sans-serif);
    }

    .section-title {
        margin: 0 0 0.5rem 0;
        color: var(--accent-color);
        font-weight: 600;
        font-size: 0.6875rem;
        font-family: var(--sans-serif);
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }

    .button-group {
        display: flex;
        gap: 0.375rem;
        margin-bottom: 0.75rem;
    }

    .settings-btn {
        transition: all 0.15s;
        cursor: pointer;
        border: 1px solid var(--border-color);
        border-radius: 4px;
        background: var(--box-bg-color);
        padding: 0.3rem 0.625rem;
        color: var(--high-contrast-text-color);
        font-weight: 500;
        font-size: 0.6875rem;
        font-family: var(--sans-serif);
    }

    .settings-btn:hover {
        border-color: var(--accent-color);
        color: var(--accent-color);
    }

    .checkbox-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.25rem 1.75rem;
    }

    .checkbox-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 0;
    }

    .checkbox-item input[type="checkbox"] {
        cursor: pointer;
        width: 0.875rem;
        height: 0.875rem;
        accent-color: var(--accent-color);
    }

    .checkbox-item label {
        cursor: pointer;
        color: var(--high-contrast-text-color);
        font-size: 0.8125rem;
        font-family: var(--sans-serif);
        white-space: nowrap;
    }

    .checkbox-item .jp {
        margin-left: 0.25rem;
        color: var(--subheading-color);
    }

    @media (max-width: 480px) {
        .checkbox-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
